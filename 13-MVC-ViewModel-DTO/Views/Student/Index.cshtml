@model InfoStudentCourseVM

@{
    ViewData["Title"] = "Index";
}

<h1>@Model.Name</h1>
<hr />
<table>
    <tr>
        <td>No</td>
        <td>Adı</td>
        <td>Soyadı</td>
    </tr>
    @foreach (var item in Model.Students)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.FirstName</td>
            <td>@item.LastName</td>
        </tr>
    }
</table>
<h3>Kurs Listesi</h3>
<table>
    <tr>
        <td>No</td>
        <td>Kurs Adı</td>
    </tr>
    @foreach (var item in Model.Courses)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
        </tr>
    }
</table>