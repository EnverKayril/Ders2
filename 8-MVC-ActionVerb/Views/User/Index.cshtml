@{
    ViewData["Title"] = "Index";
}


<h1>Uye Kayıt Sistemi</h1>
<div class="container">
    <div class="row">
        <div class="col-3">
            
        </div>
        <div class="col-6">
            <form method="post">
                <div class="form-group">
                    <label for="userName">Kullanıcı Adı:</label>
                    <input type="text" id="userName" name="userName" class="form-control"/>
                </div>
                <div class="form-group">
                    <label for="userEmail">Kullanıcı E-Posta:</label>
                    <input type="email" id="userEmail" name="userEmail" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="userPass">Kullanıcı Şifre:</label>
                    <input type="password" id="userPass" name="userPass" class="form-control" />
                </div>
                <div>
                    <button type="submit" class="btn btn-primary" style="margin-top:10px">Kayıt Ol</button>
                </div>
            </form>
        </div>
        <div class="col-3">
            
        </div>
    </div>
</div>

