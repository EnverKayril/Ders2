@model List<Product>
@{
    ViewData["Title"] = "Home Page";
}

<h1>Ürünler Listesi</h1>
@{
    if (Model.Count <=0)
    {
        <div style="color:red; font-size:24px; font-weight:bold">Henüz hiç bir ürün eklemediniz. Lütfen Ürün Ekleme Bölümüne Gidiniz. </div>
        <div>
            <a asp-action="Create">
                <input type="button" class="btn btn-primary" value="Ürün Ekle"/>
            </a>
        </div>
    }
    else
    {
        <table class="table">
            <tr>
                <th>Id</th>
                <th>Adi</th>
                <th>Fiyatı</th>
            </tr>
            @foreach (Product item in Model)
            {
                <tr>
                    <th>@item.Id</th>
                    <th>@item.Name</th>
                    <th>@item.Price TL</th>
                </tr>
            }

        </table>

    <div>
    <a asp-action="Create">Ürün Ekle</a>
</div>
    }
}