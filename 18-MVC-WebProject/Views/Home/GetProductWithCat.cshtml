@model CatProductListVM
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-3">
        <h3>Kategoriler</h3>
        <br />
        <hr />
        <br />
        <ul class="list-group">
            @foreach (var item in Model.Categories)
            {
                <a asp-action="GetProductWithCat" asp-controller="Home" asp-route-id="@item.Id">
                <li class="list-group-item">@item.Name</li>
                </a>
            }
        </ul>
    </div>
    <div class="col-md-9">
        <h3>Ürünler</h3>
        <br />
        <hr />
        <br />
        <div class="row">
            @foreach (var item in Model.Products)
            {
                <div class="col-md-4  mx-2">
                    <div class="card" style="width: 18rem;">
                        <img src="~/img/products/@item.Image" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text"><b>Fiyat: </b>@item.Price - <b>Stok: </b>@item.Stock</p>
                            <a asp-action="GetProductWithId" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-primary">Detaya Git</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>